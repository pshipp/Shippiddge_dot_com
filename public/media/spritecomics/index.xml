      <guid>//localhost:1313/media/spritecomics/spritecomics00/</guid>
      <description>&lt;style&gt;&#xD;&#xA;  /* VIEWER STYLES */&#xD;&#xA;  #imageViewerContainer {&#xD;&#xA;    background: #000;&#xD;&#xA;    border-radius: 8px;&#xD;&#xA;    overflow: hidden;&#xD;&#xA;    margin-bottom: 2rem;&#xD;&#xA;    position: relative;&#xD;&#xA;    display: flex;&#xD;&#xA;    align-items: center;&#xD;&#xA;    justify-content: center;&#xD;&#xA;    min-height: 400px;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  /* New style for the link wrapper */&#xD;&#xA;  #mainLink {&#xD;&#xA;    display: block;&#xD;&#xA;    max-width: 100%;&#xD;&#xA;    max-height: 80vh; /* Keeps the link strictly within bounds */&#xD;&#xA;    cursor: zoom-in;  /* Visual cue that the image can be opened */&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  #mainImage {&#xD;&#xA;    max-width: 100%;&#xD;&#xA;    max-height: 80vh;&#xD;&#xA;    display: block;&#xD;&#xA;    object-fit: contain;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  .nav-btn {&#xD;&#xA;    position: absolute;&#xD;&#xA;    top: 50%;&#xD;&#xA;    transform: translateY(-50%);&#xD;&#xA;    background-color: rgba(0, 0, 0, 0.5);&#xD;&#xA;    color: white;&#xD;&#xA;    border: none;&#xD;&#xA;    padding: 1rem;&#xD;&#xA;    cursor: pointer;&#xD;&#xA;    font-size: 2rem;&#xD;&#xA;    z-index: 10;&#xD;&#xA;    transition: background 0.3s;&#xD;&#xA;    user-select: none;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  .nav-btn:hover { background-color: rgba(0, 0, 0, 0.8); }&#xD;&#xA;  .prev-btn { left: 0; }&#xD;&#xA;  .next-btn { right: 0; }&#xD;&#xA;  &#xD;&#xA;  .img-btn.active-thumb {&#xD;&#xA;    outline: 3px solid #007bff;&#xD;&#xA;    transform: scale(1.02);&#xD;&#xA;  }&#xD;&#xA;&lt;/style&gt;&#xD;&#xA;&#xD;&#xA;&lt;div id=&#34;bigPlayer&#34; class=&#34;mb-4&#34;&gt;&#xD;&#xA;  &#xD;&#xA;  &lt;div id=&#34;imageViewerContainer&#34;&gt;&#xD;&#xA;    &lt;button class=&#34;nav-btn prev-btn&#34; id=&#34;prevBtn&#34;&gt;&amp;#10094;&lt;/button&gt;&#xD;&#xA;    &#xD;&#xA;    &lt;a id=&#34;mainLink&#34; href=&#34;&#34; target=&#34;_blank&#34; title=&#34;Click to open full size&#34;&gt;&#xD;&#xA;      &lt;img id=&#34;mainImage&#34; src=&#34;&#34; alt=&#34;Select an image below&#34;&gt;&#xD;&#xA;    &lt;/a&gt;&#xD;&#xA;&#xD;&#xA;    &lt;button class=&#34;nav-btn next-btn&#34; id=&#34;nextBtn&#34;&gt;&amp;#10095;&lt;/button&gt;&#xD;&#xA;  &lt;/div&gt;&#xD;&#xA;  &#xD;&#xA;  &lt;h4 id=&#34;mainCaption&#34; class=&#34;text-center mt-2&#34;&gt;Select an image&lt;/h4&gt;&#xD;&#xA;&lt;/div&gt;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&lt;script&gt;&#xD;&#xA;document.addEventListener(&#34;DOMContentLoaded&#34;, function() {&#xD;&#xA;  const mainImage = document.getElementById(&#39;mainImage&#39;);&#xD;&#xA;  const mainLink = document.getElementById(&#39;mainLink&#39;); // New reference&#xD;&#xA;  const mainCaption = document.getElementById(&#39;mainCaption&#39;);&#xD;&#xA;  const prevBtn = document.getElementById(&#39;prevBtn&#39;);&#xD;&#xA;  const nextBtn = document.getElementById(&#39;nextBtn&#39;);&#xD;&#xA;  const bigPlayer = document.getElementById(&#39;bigPlayer&#39;);&#xD;&#xA;&#xD;&#xA;  let allButtons = document.querySelectorAll(&#39;.img-btn&#39;);&#xD;&#xA;  let currentIndex = 0;&#xD;&#xA;&#xD;&#xA;  function updateViewer(index) {&#xD;&#xA;    allButtons = document.querySelectorAll(&#39;.img-btn&#39;);&#xD;&#xA;&#xD;&#xA;    if (index &lt; 0) index = allButtons.length - 1;&#xD;&#xA;    if (index &gt;= allButtons.length) index = 0;&#xD;&#xA;&#xD;&#xA;    currentIndex = index;&#xD;&#xA;    const selectedThumb = allButtons[currentIndex];&#xD;&#xA;    const fullSrc = selectedThumb.getAttribute(&#39;data-full-src&#39;);&#xD;&#xA;&#xD;&#xA;    // Update Image, Link, and Caption&#xD;&#xA;    mainImage.src = fullSrc;&#xD;&#xA;    mainLink.href = fullSrc; // Updates the link to match the image&#xD;&#xA;    mainCaption.textContent = selectedThumb.getAttribute(&#39;data-caption&#39;);&#xD;&#xA;&#xD;&#xA;    allButtons.forEach(btn =&gt; btn.classList.remove(&#39;active-thumb&#39;));&#xD;&#xA;    selectedThumb.classList.add(&#39;active-thumb&#39;);&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  // Event Delegation for Thumbnails&#xD;&#xA;  document.body.addEventListener(&#39;click&#39;, function(e) {&#xD;&#xA;    const btn = e.target.closest(&#39;.img-btn&#39;);&#xD;&#xA;    if (btn) {&#xD;&#xA;      allButtons = document.querySelectorAll(&#39;.img-btn&#39;);&#xD;&#xA;      const index = Array.from(allButtons).indexOf(btn);&#xD;&#xA;      updateViewer(index);&#xD;&#xA;      bigPlayer.scrollIntoView({ behavior: &#39;smooth&#39;, block: &#39;start&#39; });&#xD;&#xA;    }&#xD;&#xA;  });&#xD;&#xA;&#xD;&#xA;  prevBtn.addEventListener(&#39;click&#39;, () =&gt; updateViewer(currentIndex - 1));&#xD;&#xA;  nextBtn.addEventListener(&#39;click&#39;, () =&gt; updateViewer(currentIndex + 1));&#xD;&#xA;&#xD;&#xA;  if(allButtons.length &gt; 0) {&#xD;&#xA;    updateViewer(0);&#xD;&#xA;  }&#xD;&#xA;});&#xD;&#xA;&lt;/script&gt;</description>
    </item>
    <item>
      <title></title>
      <link>//localhost:1313/media/spritecomics/spritecomics01/</link>
      <pubDate>Mon, 01 Jan 0001 00:00:00 +0000</pubDate>
      <guid>//localhost:1313/media/spritecomics/spritecomics01/</guid>
      <description>&lt;style&gt;&#xD;&#xA;  /* THUMBNAIL GRID &#xD;&#xA;     - &#34;repeat(auto-fill...)&#34; creates as many columns as possible.&#xD;&#xA;     - &#34;minmax(120px, 1fr)&#34; means buttons will be at least 120px wide, &#xD;&#xA;       but will stretch to fill gaps.&#xD;&#xA;  */&#xD;&#xA;  .starter-grid {&#xD;&#xA;    display: grid;&#xD;&#xA;    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));&#xD;&#xA;    gap: 0.5rem; /* Tight gap for a gallery look */&#xD;&#xA;    margin-top: 2rem;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  .img-btn {&#xD;&#xA;    width: 100%;&#xD;&#xA;    aspect-ratio: 1 / 1; /* Forces the button to be a perfect square */&#xD;&#xA;    border: 0;&#xD;&#xA;    padding: 0;&#xD;&#xA;    cursor: pointer;&#xD;&#xA;    overflow: hidden;&#xD;&#xA;    position: relative; /* Needed for text overlay */&#xD;&#xA;    background: #212529;&#xD;&#xA;    transition: transform 0.2s;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  .img-btn:hover {&#xD;&#xA;    transform: scale(1.05);&#xD;&#xA;    z-index: 2; /* Brings it above neighbors on hover */&#xD;&#xA;    box-shadow: 0 4px 10px rgba(0,0,0,0.5);&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  /* MAGIC CROP: This makes any image size fit the square */&#xD;&#xA;  .img-btn img {&#xD;&#xA;    width: 100%;&#xD;&#xA;    height: 100%;&#xD;&#xA;    object-fit: cover; &#xD;&#xA;    display: block;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  /* TEXT OVERLAY (Optional)&#xD;&#xA;     This hides the text by default and shows it only when you hover,&#xD;&#xA;     keeping the square look clean.&#xD;&#xA;  */&#xD;&#xA;  .img-btn div {&#xD;&#xA;    position: absolute;&#xD;&#xA;    bottom: 0;&#xD;&#xA;    left: 0;&#xD;&#xA;    width: 100%;&#xD;&#xA;    padding: 0.5rem;&#xD;&#xA;    background: rgba(0, 0, 0, 0.7); /* Semi-transparent black */&#xD;&#xA;    color: white;&#xD;&#xA;    opacity: 0; /* Invisible by default */&#xD;&#xA;    transition: opacity 0.2s;&#xD;&#xA;    text-align: center;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  /* Show text on hover */&#xD;&#xA;  .img-btn:hover div {&#xD;&#xA;    opacity: 1;&#xD;&#xA;  }&#xD;&#xA;&#xD;&#xA;  .img-btn h5 {&#xD;&#xA;    margin: 0;&#xD;&#xA;    font-size: 0.8rem; /* Smaller text for thumbnails */&#xD;&#xA;    font-weight: 500;&#xD;&#xA;  }&#xD;&#xA;&lt;/style&gt;&#xD;&#xA;&#xD;&#xA;&lt;body&gt; &lt;h3 class=&#34;mb-4&#34;&gt;SONIC LOGIC (2004 - 2006)&lt;/h3&gt; Follow off-kilter versions of Sonic, Tails, and Knuckles as they traverse through various videogame universes in their attempt to return home.&#xD;&#xA;&lt;div class=&#34;starter-grid&#34;&gt;&#xD;&#xA;  &#xD;&#xA;  &lt;button class=&#34;img-btn&#34; &#xD;&#xA;          data-full-src=&#34;//localhost:1313/images/art/xxxxxx.png&#34; &#xD;&#xA;          data-caption=&#34;xxxxx&#34;&gt;&#xD;&#xA;    &lt;img src=&#34;//localhost:1313/images/art/xxxxxx.png&#34; &gt;&#xD;&#xA;    &lt;div&gt;&lt;h5&gt; =xxxxx&lt;/h5&gt;&lt;/div&gt;&#xD;&#xA;  &lt;/button&gt;</description>
    </item>
